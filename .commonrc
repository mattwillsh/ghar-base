# /* vim: set filetype=sh :*/
export EDITOR=vim

# Post to rememberthemilk via twitter. bti needs to be set up
rtm () {
  echo d rtm $* | bti
}

# Bodge the TERM into 256colors
[[ $TERM == 'screen' || $TERM == 'xterm' ]] && export TERM=${TERM}-256color

# Add ghar to PATH and add completion if running bash
[[ -d $HOME/git/ghar/bin ]] && export PATH=$PATH:$HOME/git/ghar/bin
[[ $( basename $SHELL) == 'bash' ]]  && source $HOME/git/ghar/bash-completion.sh

# Setup vim
[[ -f $HOME/.vim/setup.sh ]] && $HOME/.vim/setup.sh

# Setup dircolors
[[ -f $HOME/.dir_colors ]] && eval $( dircolors $HOME/.dir_colors )
